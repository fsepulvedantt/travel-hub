<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.ntt.travelhub.reserva">
	<namespace>Reserva</namespace>
	<entity local-service="true" name="Reserva" remote-service="true" uuid="true">

		<!-- PK fields -->
		<column name="reservaId" primary="true" type="long" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="origen" type="String" />
		<column name="destino" type="String" />
		<column name="fechaSalida" type="Date" />
		<column name="fechaLlegada" type="Date" />
		<column name="mail" type="String" />
		<column name="dni" type="String" />
		<column name="nombre" type="String" />
		<column name="codigoReserva" type="String" />
		<column name="idViajeIda" type="long" />
		<column name="idViajeVuelta" type="long" />
		<column name="tipoReserva" type="String" />

		<!-- Order -->
		<order by="asc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->
		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="Dni" return-type="Collection">
			<finder-column name="dni" />
		</finder>
		<finder name="CodigoReserva" return-type="Reserva" unique="true">
			<finder-column name="codigoReserva" />
		</finder>
	</entity>
</service-builder>
